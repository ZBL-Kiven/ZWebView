<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="265dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/ssl_error_alert_pop_bg"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/web_ssl_alert_iv_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/icon_ssl_alert" />

    <TextView
        android:id="@+id/web_ssl_alert_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/web_ssl_alert_iv_icon"
        android:layout_marginTop="10dp"
        android:text="@string/ssl_error_hint"
        android:textColor="#333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/web_ssl_alert_tv_proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/web_ssl_alert_tv_title"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="@string/ssl_proceed"
        android:textColor="#333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/web_ssl_alert_tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/web_ssl_alert_tv_proceed"
        android:layout_alignParentEnd="true"
        android:text="@string/ssl_cancel"
        android:textColor="#333"
        android:textSize="14sp" />

</RelativeLayout>